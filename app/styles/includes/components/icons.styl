// Icons
// 
// Styles for icons
//
// .class - description
//
// Markup:
// <i class="icon {$modifiers}"></i>
//
// Styleguide 2.5

font-face('iprofero', '/fonts')

[class$="icon"],
[class*="icon "]
	font-family					'iprofero'
	speak						none
	font-style					normal
	font-weight					normal
	font-variant				normal
	text-transform				none
	line-height					1

	/* Better Font Rendering =========== */
	-webkit-font-smoothing		antialiased
	-moz-osx-font-smoothing		grayscale

.left.icon
	margin-right 				0.5em

.right.icon
	margin-left 				0.5em

.large.icon
	font-size 					2em

.small.icon
	font-size 					0.6em

a
	.list2.icon
		color 					textcolour

	&:active,
	&:focus,
	&:hover,
	&.active

		.list2.icon
			color 				lighten(textcolour, 20%)

