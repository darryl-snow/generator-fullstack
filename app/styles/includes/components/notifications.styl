@keyframes loader
	0%
		-webkit-transform		scale(1)
		-moz-transform			scale(1)
		-ms-transform			scale(1)
		-o-transform			scale(1)
		transform				scale(1)
		background-color		white
	
	100%
		-webkit-transform		scale(.3)
		-moz-transform			scale(.3)
		-ms-transform			scale(.3)
		-o-transform			scale(.3)
		transform				scale(.3)
		background-color		dark-blue