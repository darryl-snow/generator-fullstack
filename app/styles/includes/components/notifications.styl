.notification
	@extend 					.animated.fast
	background-color 			rgba(white, 0.8)
	border-bottom 				1px solid lightish-grey
	border-left 				1px solid lightish-grey
	border-right 				1px solid lightish-grey
	border-top 					none !important
	box-shadow					0 1px 1px rgba(black,0.1)
	box-sizing 					border-box
	font-size					0.8em
	font-weight 				700
	left						50%
	margin-left					-25%
	max-width 					90%
	padding						1em 2em
	position 					absolute
	text-align					center
	top 						0
	width						50%
	z-index 					99999

	&.success
		background-color 		lighten(green, 70%)
		border-color 			green
		color 					green

	&.warning
		background-color 		lighten(yellow, 70%)
		border-color 			yellow
		color 					darken(yellow, 20%)

	&.error
		background-color 		lighten(red, 70%)
		border-color 			red
		color 					red

	&.info
		background-color 		lighten(blue, 70%)
		border-color 			blue
		color 					blue

	&.fade
		opacity 				0

	.icon
		@extend 				.animated.fast
		cursor 					pointer
		font-size 				1.2em
		opacity 				0.7
		vertical-align 			middle

		&:active,
		&:focus,
		&:hover
			opacity 			1

	.close.icon
		padding 				0.2em
		position 				absolute
		right 					0
		top 					0

	&.animate-enter
		@extend 		.animated.slow
		opacity 				0
 
	&.animate-enter.animate-enter-active
		opacity 				1

.loader
	height						1em
	margin 						4em auto 0
	position					relative
	width						9.4em

[class*=loader-segment]
	position					absolute
	top							0
	background-color			white
	width						1em
	height						1em
	-webkit-animation-name		loader
	-moz-animation-name			loader
	-o-animation-name			loader
	animation-name				loader
	-webkit-animation-duration			1.3s
	-moz-animation-duration				1.3s
	-o-animation-duration				1.3s
	animation-duration					1.3s
	-webkit-animation-iteration-count	infinite
	-moz-animation-iteration-count		infinite
	-o-animation-iteration-count		infinite
	animation-iteration-count			infinite
	-webkit-animation-direction			linear
	-moz-animation-direction			linear
	-o-animation-direction				linear
	animation-direction					linear
	transform					scale(.3)
	rounded()

.loader-segment-1
