// Buttons
// 
// Button styles
//
// .class - description
//
// Markup:
// <button class="{$modifiers}">Button</button>
//
// Styleguide 2.2

button
.button
	simple-button(dark-blue)
	border 					none
	cursor 					pointer

	&.small
		simple-button(dark-blue, 'small')

	&.large
		simple-button(dark-blue, 'large')

	&.disabled
		button-disabled()
		cursor 				not-allowed

	&.edit
		simple-button(green)
		color 				white

	&.delete
		simple-button(red)
		color 				white

		&:active,
		&:focus,
		&:hover
			color 			white

.newproject button
	font-size 				1em
	padding 				0.9em

.delete.agency.button
	column(6)
	offset(3)
	display 				block
	margin-top 				1em