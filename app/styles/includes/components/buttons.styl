// Buttons
// 
// Button styles
//
// .class - description
//
// Markup:
// <button class="{$modifiers}">Button</button>
//
// Styleguide 2.2

button
.button
	simple-button(dark-blue)
	border 					none
	cursor 					pointer

	&.large
		simple-button(dark-blue, 'large')

	&.disabled
		button-disabled()
		cursor 				not-allowed