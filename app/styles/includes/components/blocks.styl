// Styleguide 2.1


// .header
// .hero
// .footer
// etc.

.hero
	background 					blue
	box-sizing 					border-box
	color 						white
	padding 					2em
	group()

	h1
		font-size 				2.5em
		margin 					0

		@media small-device
			font-size 			4em

	input
		border-color 			blue

		&:focus
			border-color 		dark-blue
			box-shadow 			0 0 5px dark-blue

	button:focus
		background-color 		lighten(dark-blue, 10%)

	a
		color 					white

		&:active,
		&:focus,
		&:hover
			color 				white
			text-decoration 	underline

.panel
	@extend 					.animated.fast
	background 					white
	box-shadow 					0 1px 2px rgba(black,0.1)
	box-sizing 					border-box
	max-width 					100%
	padding 					1.5em
	text-align 					left
	word-wrap 					break-word
	group()
	overflow 					visible