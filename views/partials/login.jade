.container
	.panel.login
		h1.centre.aligned
			| Log in

		img.rounded.centred.avatar(src='https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120', alt='')
		form(name='form', data-ng-controller="AuthCtrl", ng-submit='login(form)', novalidate)
			div(ng-class='{"has-error": form.email.$error.mongoose}')
				input(type='email', placeholder='Email', name='email', ng-model='user.email', required, autofocus, mongoose-error, tabindex="1")
				p.error(ng-show='form.email.$error.mongoose')
					| {{ errors.email }}
			div(ng-class='{"has-error": form.password.$error.mongoose}')
				input(type='password', placeholder='Password', name='password', ng-model='user.password', required, mongoose-error, tabindex="2")
				p.error(ng-show='form.password.$error.mongoose')
					| {{ errors.password }}
			button.button(type='submit', tabindex="3") Log in
				i.arrow-right.right.icon
		a.small(href='/signup') Create an account