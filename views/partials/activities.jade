.container(data-ng-init="getAll()", on-escape="cancelEdit()", global)

	h1 Activities

	.panel
		ul.activities
			li.activity(data-ng-repeat="activity in activities | orderBy: 'name'", data-ng-click="toggleSwipe(activity)", data-ng-swipe-left="swipeLeft(activity)", data-ng-swipe-right="swipeRight(activity)", data-ng-class="{'swiped':activity.swiped, 'editing':activity.editing}")
				span(data-ng-bind="activity.name")
				a.floated.right.delete(data-ng-click="deleteactivity(activity)")
					i.cross.icon
				a.floated.right.edit(data-ng-click="editactivity(activity)")
					i.pencil.icon

	.newactivity#newactivity
		form
			input(type="text", placeholder="New Activity", data-ng-model="newactivity.name", autofocus)
			button(data-ng-click="addactivity()", data-ng-class="{'edit':newactivity.editing}")
				i.icon(data-ng-class="{'plus':!newactivity.editing, 'pencil':newactivity.editing}")

